@page
@using System.Security.Claims
@using IssueTracker.Atrributes
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form asp-page="Index" asp-page-handler="Filter" class="d-flex gap-2 justify-content-between">
    <div class="row">
        <div class="col-auto">
            <input type="text" class="form-control" placeholder="Search..." />
        </div>
        <div class="col-auto">
            <select asp-for="FilterInput.AssigneeId" asp-items="Model.AvailableAssignees"></select>
        </div>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <a class="btn btn-primary mb-4" asp-page="Issues/New">Add Issue</a>
    }
    @* @User.FindFirstValue(ClaimTypes.Name) *@
    @* @User.Identity.Name *@
</form>
@* <ul>
@foreach (var claim in User.Claims)
{
<li>@claim.Type => @claim.Value</li>
}
</ul> *@
@if (Model.Issues.Count > 0)
{
    <ul class="list-unstyled d-flex flex-column gap-2 ">
    @foreach (var issue in Model.Issues)
        {
            <li class="rounded border p-2">
                <a class="text-reset" asp-page="Issues/Index" asp-route-id="@issue.Id">
                    @issue.Title
                    <span class="text-muted">#@issue.Id</span>
                </a>
                <div style="font-size: small;" class="text-muted">Opened by @issue.AuthorName</div>
                <div style="font-size: smaller;" class="text-muted">Last updated on @issue.UpdatedDate</div>

                <span
                    class="badge bg-@(ColorHelper.GetColorAttributeValue<Issue.IssueStatus>(issue.Status))">@issue.Status</span>
            </li>
        }
    </ul>
}
else
{
    <h1 class="text-center">There are no issues 🎉</h1>
}